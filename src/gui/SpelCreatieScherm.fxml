<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1600.0" styleClass="borderpane" stylesheets="@../resources/css/gui.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
         <top>
            <GridPane alignment="TOP_CENTER" hgap="25.0" vgap="35.0" BorderPane.alignment="CENTER">
               <children>
                  <FlowPane>
                     <children>
                        <ImageView fitHeight="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../resources/images/Startscherm.png" />
                           </image>
                        </ImageView>
                     </children>
                  </FlowPane>
                  <FlowPane alignment="TOP_CENTER" hgap="50.0" vgap="25.0" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                     <children>
                        <Button fx:id="btnBack" contentDisplay="TOP" minWidth="150.0" mnemonicParsing="false" onAction="#back" prefHeight="100.0" styleClass="redButton" stylesheets="@../resources/css/gui.css" text="Terug">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/images/back.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                        </Button>
                        <Button fx:id="btnSaveGame" contentDisplay="TOP" disable="true" minWidth="150.0" mnemonicParsing="false" onAction="#saveGame" prefHeight="100.0" styleClass="yellowButton" stylesheets="@../resources/css/gui.css" text="Save game">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/images/mario-clipart-mario-cart-3-transparent.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                        </Button>
                     </children>
                  </FlowPane>
                  <Label fx:id="lblGameName" alignment="TOP_CENTER" contentDisplay="CENTER" styleClass="statusMessage" stylesheets="@../resources/css/gui.css" text="Enter game name: " GridPane.rowIndex="2" />
                  <TextField fx:id="gameNameField" styleClass="inputfieldBlue" stylesheets="@../resources/css/gui.css" GridPane.rowIndex="3" GridPane.valignment="TOP" />
                  <FlowPane alignment="TOP_CENTER" hgap="50.0" vgap="25.0" GridPane.rowIndex="4">
                     <children>
                        <Button fx:id="btnCreateGame" contentDisplay="TOP" minWidth="150.0" mnemonicParsing="false" onAction="#createGame" prefHeight="100.0" styleClass="blueButton" stylesheets="@../resources/css/gui.css" text="Create game">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/images/imagenes-de-mario-bros-png-transparent.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                        </Button>
                        <Button fx:id="btnAddBoard" contentDisplay="TOP" disable="true" minWidth="150.0" mnemonicParsing="false" onAction="#addBoard" prefHeight="100.0" styleClass="greenButton" stylesheets="@../resources/css/gui.css" text="Add board">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/images/1-up-mushroom-png-2-transparent.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                        </Button>
                     </children>
                  </FlowPane>
                  <FlowPane alignment="TOP_CENTER" GridPane.rowIndex="5">
                     <children>
                        <Label fx:id="lblMessage" styleClass="invalidMessage" stylesheets="@../resources/css/gui.css" textFill="RED" />
                     </children>
                  </FlowPane>
               </children>
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" percentWidth="0.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
                  <RowConstraints percentHeight="0.0" />
               </rowConstraints>
            </GridPane>
         </top>
      </BorderPane>
